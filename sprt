#!/bin/dash
date=$(date '+%Y-%m-%d_%H-%M-%S')
sprt_dir=$HOME/coding/sprt
root_dir=.
concurrency=8

while getopts "c:p:" option
do
	case $option in
		c) concurrency=$OPTARG ;;
		p) root_dir=$OPTARG ;;
	esac
done

shift $(($OPTIND - 1))

cd $root_dir
git checkout $1
cargo build --release
mv -f $root_dir/target/release/crab $sprt_dir/new
git checkout master
cargo build --release
mv -f $root_dir/target/release/crab $sprt_dir/master

cutechess-cli \
	-engine name=new proto=uci cmd=$sprt_dir/new \
	-engine name=master proto=uci cmd=$sprt_dir/master \
	-each tc=8+0.08 \
	-variant standard \
	-concurrency $concurrency \
	-sprt elo0=0 elo1=5 alpha=0.05 beta=0.05 \
	-games 2 -rounds 5000 -repeat 2 \
	-ratinginterval 250 \
	-openings file=$sprt_dir/UHO_XXL_2022_+110_+139.epd format=epd order=random \
	-pgnout $sprt_dir/$date.pgn
	#-debug \
	#-draw movenumber=40 movecount=3 score=10 \
	#-resign movecount=3 score=400 \

rm $sprt_dir/{master,new}
